<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.senaimg.wms.view.controller.ViewItemsSaleController">
    <stylesheets>
        <URL value="@/br/com/senaimg/wms/view/stylesheet/viewitemssale.css" />
    </stylesheets>
   <children>
      <BorderPane>
         <center>
            <VBox maxWidth="480.0" BorderPane.alignment="CENTER_LEFT">
               <children>
                  <GridPane id="formGridPane" fx:id="formGridPaneCustomer" BorderPane.alignment="TOP_LEFT">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="351.0" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="525.0" minWidth="10.0" prefWidth="341.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label id="nameLabel" fx:id="customerLabel" text="Customer:" />
                        <Label fx:id="customerValueLabel" text="sName" GridPane.columnIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="25.0" />
                     </VBox.margin>
                  </GridPane>
                  <Label fx:id="saleLabel" text="Sale">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
                  <StackPane id="cataloguePane" prefHeight="150.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox>
                           <StackPane.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </StackPane.margin>
                           <children>
                              <GridPane BorderPane.alignment="TOP_LEFT">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="40.0" />
                                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="210.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <Label fx:id="filterLabel" text="Filter:" />
                                    <TextField id="searchField" fx:id="searchProductAdded" prefHeight="25.0" prefWidth="240.0" promptText="Search Product" GridPane.columnIndex="1" />
                                 </children>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </padding>
                              </GridPane>
                              <TableView fx:id="addedTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="mnemonicColumn" minWidth="125.0" prefWidth="125.0" text="Mnemonic" />
                                    <TableColumn fx:id="quantityColumn" minWidth="60.0" prefWidth="60.0" text="Quantity" />
                                    <TableColumn fx:id="totalPriceColumn" minWidth="100.0" prefWidth="100.0" text="Total Price" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" left="20.0" top="5.0" />
                     </VBox.margin>
                  </StackPane>
               </children>
            </VBox>
         </center>
         <right>
            <VBox fx:id="rightPane" alignment="TOP_CENTER" prefWidth="300.0" styleClass="rightPane" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Label fx:id="imageLabel" text="Customer Image" />
                  <Rectangle id="squareImage" fx:id="imageSquare" arcHeight="5.0" arcWidth="5.0" fill="#949494" height="200.0" stroke="#ffffff00" strokeType="INSIDE" width="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Rectangle>
                  <Region VBox.vgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="25.0" top="25.0" />
               </padding>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </VBox>
         </right>
      </BorderPane>
   </children>
</StackPane>
