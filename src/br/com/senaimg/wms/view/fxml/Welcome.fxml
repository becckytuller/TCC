<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../stylesheet/welcome.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.senaimg.wms.view.controller.WelcomeController">
   <children>
      <VBox alignment="CENTER" StackPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/wmsicon512.png" />
               </image>
            </ImageView>
            <Label fx:id="welcomeLabel" text="Welcome to Pyxis WMS" wrapText="true">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="subWelcomeLabel" layoutX="223.0" layoutY="421.0" text="Your Warehouse Management System" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="-10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="startButton" mnemonicParsing="false" text="Start..." />
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</StackPane>
